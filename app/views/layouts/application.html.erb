<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
      <p class="User-header">
        <% if @current_user.first_name == "Walk-incustomer" %>
          Welcome <%= @current_billingclerk.first_name %>!
        <% else %>
          Welcome <%= @current_user.first_name %>!
        <%end%>
        <%= link_to "Sign out", destroy_session_path,class: "signout", method: "delete" %>
      </p>
      <div class="header">
        Maharaja Restaurant
      </div>
    <% end %>
    <% if flash[:notice] %>
      <p class="Flash-notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <% if flash[:error] %>
      <p class="Flash-error">
        <%= flash[:error] %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
